<program xmlns="http://www.kinoma.com/kpr/1">

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<!-- HANDLERS -->
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->

	<handler path="/countResult">
		<behavior>
			<method id="onInvoke" params="count"><![CDATA[
				trace("Count is: " + count + "\n" );
				if (count >= 10)
                    handler.invoke(new MessageWithObject(“pins:/count/increment?repeat=off"));
			]]></method>
		</behavior>
	</handler>    
    
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<!-- BEHAVIORS -->
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
    
	<behavior id="ApplicationBehavior">
		<method id="onLaunch" params="content"><![CDATA[
            var message = new MessageWithObject("pins:configure", {
                count: {
                    require: "count",
                    pins: {}
                }});
            application.invoke(message);

            message = new MessageWithObject(“pins:/count/increment?repeat=on&
						callback=/countResult&interval=1500");
            application.invoke(message);
		]]></method>
		</behavior>
    
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<!-- SCRIPTS -->
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
    
	<script><![CDATA[
		application.behavior = new ApplicationBehavior();
	]]></script>
</program>
